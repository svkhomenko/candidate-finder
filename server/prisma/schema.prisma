generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique @db.VarChar(255)
  password    String   @db.Char(60)
  fullName    String   @map("full_name") @db.VarChar(255)
  role        UserRole
  phoneNumber String   @map("phone_number") @db.VarChar(255)
  isConfirmed Boolean  @default(false) @map("is_confirmed")

  resumes     Resume[]
  vacancies   Vacancy[]

  @@map("user")
}

enum UserRole {
  hr
  candidate
}

model Resume {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  description String   @db.Text
  salaryMin   Int      @map("salary_min")
  salaryMax   Int      @map("salary_max")
  experience  Int
  education   Education
  place_id    String   @db.Text
  address     String   @db.Text
  online      Boolean
  contract    Contract
  userId      Int      @map("user_id")

  resumeLanguageLevels ResumeLanguageLevel[]

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("resume")
}

model ResumeLanguageLevel {
  language  Language
  resumeId  Int @map("resume_id")
  level     Level

  resume  Resume  @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@id([language, resumeId])
  @@map("resume_language_level")
}

model Vacancy {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  description String   @db.Text
  salaryMin   Int      @map("salary_min")
  salaryMax   Int      @map("salary_max")
  experience  Int
  education   Education
  place_id    String   @db.Text
  address     String   @db.Text
  online      Boolean
  contract    Contract
  userId      Int      @map("user_id")

  vacancyLanguageLevels VacancyLanguageLevel[]

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("vacancy")
}

model VacancyLanguageLevel {
  language  Language
  vacancyId Int @map("vacancy_id")
  level     Level

  vacancy  Vacancy  @relation(fields: [vacancyId], references: [id], onDelete: Cascade)

  @@id([language, vacancyId])
  @@map("vacancy_language_level")
}

